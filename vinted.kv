<AddAccountWindow>:
    name: 'add_new_account'

    username_input: username_input
    account_id_input: account_id_input
    password_input: password_input

    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "top"
                Button:
                    text: "Go back"
                    size_hint: 1, 0.1
                    on_release:
                        root.input_checker()
                        root.clear_inputs_fields()
                        app.root.current = "accounts"
            BoxLayout:
    
        BoxLayout:
            size: root.width, root.height
            # height: self.minimum_height
            orientation: "vertical"
            spacing: 20
            size_hint: 1, 0.8
            pos_hint: { "y": 0.2 }

            
            Label:
                text: "Login in"
                font_size: 50
                size_hint: 1, 0.2
                width: "300dp"
                pos_hint: { "center_x": 0.5 }

            Label:
                text: "USERNAME :"
                size_hint: 1, 0.2
                pos_hint: { "center_x": 0 }

            TextInput:
                id: username_input
                font_size: 28
                size_hint: 1, 0.2
                multiline: False


            Label:
                text: "ACCOUNT ID :"
                size_hint: 1, 0.2
                pos_hint: { "center_x": 0 }

            TextInput:
                id: account_id_input
                font_size: 28
                size_hint: 1, 0.2
                multiline: False

            Label:
                text: "PASSWORD :"
                size_hint: 1, 0.2
                pos_hint: { "center_x": 0 }

            TextInput:
                id: password_input
                font_size: 28
                size_hint: 1, 0.2
                multiline: False
                password: True

            BoxLayout:
                text: "PASSWORD :"
                size_hint: 1, 0.2
                pos_hint: { "center_x": 0 }

            # Label:
            #     size_hint: 1, 0.2
            #     id: 'info'
            #     text: 'test'

            Button:
                id: "button"
                text: "Add account!"
                size_hint: 1, 0.4
                disabled: not root.sumbit_enabled
                on_release:
                    root.on_click_add_btn()
                    root.clear_inputs_fields()
                    app.root.current = "accounts"

            
        BoxLayout:
            orientation: 'vertical'

            Label:
                text: ''
                size_hint: 1, 0.1

            Label:
                id: username_info
                text: ''
                font_size: 20
                size_hint: 1, 0.2
            
            Label:

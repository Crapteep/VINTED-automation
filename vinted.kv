


WindowManager:
    MainWindow:
        id: MainWindow
    LoginInWindow:
    MyAccountsWindow:
        id: MyAccountsWindow
    AppSettingsWindow:
    AddAccountWindow:

    
<MainWindow>:
    name: 'main'

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 20
        padding: 10

        BoxLayout:
            size_hint: 1, 0.5
        

        Button:
            text: "Login in"
            size_hint: 0.3, 0.3
            pos_hint: { "center_x": 0.5 }
            on_release:
                app.root.current = "login"

        Button:
            text: "Accounts"
            size_hint: 0.3, 0.3
            pos_hint: { "center_x": 0.5 }
            on_release:
                app.root.current = "accounts"

        Button:
            text: "Settings"
            size_hint: 0.3, 0.3
            pos_hint: { "center_x": 0.5 }
            on_release:
                app.root.current = "settings"
                root.on_click()



        BoxLayout:
            size_hint: 1, 0.5





<LoginInWindow>:
    name: 'login'
    spinner_id: spinner_id

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: ''
            Label:
                id: click_label
                text: 'Choose your account'
                font_size: 32
            Button:
                text: 'go back'
                on_release: app.root.current = 'main'
            Button:
                text: 'start'
                on_release: root.start()

        Spinner:
            id: spinner_id
            text: "None"
            values: []
            on_text: root.spinner_clicked(spinner_id.text)
        Label:
            text:''




